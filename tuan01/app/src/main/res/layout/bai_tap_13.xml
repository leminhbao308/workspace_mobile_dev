<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="15"
    android:background="#3A873D"
    tools:context=".BaiTap13_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chuyển Đổi Năm Dương Lịch"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="#3A873D"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:stretchColumns="1"
        android:background="@color/white"
        >

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="20dp"
                android:text="Năm Dương Lịch: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/edtDuongLich"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="2003"
                />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/btnChuyenDoi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Chuyển Đổi"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_column="1"
                android:backgroundTint="#BEBDBD"
                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingStart="5dp"
                android:paddingEnd="20dp"
                android:text="Năm Âm Lịch: "
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/tvAmLich"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="#FFEB3B"
                />
        </TableRow>
    </TableLayout>
  </LinearLayout>